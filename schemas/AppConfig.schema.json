{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$ref": "#/definitions/AppConfig",
    "definitions": {
        "AppConfig": {
            "required": [
                "loginTimestamp",
                "colorTheme",
                "mode",
                "connection",
                "savedConnections",
                "activeTabs",
                "filesPaths",
                "stringCache",
                "boolCache"
            ],
            "properties": {
                "loginTimestamp": {
                    "type": "integer"
                },
                "colorTheme": {
                    "type": "integer"
                },
                "mode": {
                    "type": "integer"
                },
                "connection": {
                    "$ref": "#/definitions/PbApp.Connection",
                    "additionalProperties": false
                },
                "savedConnections": {
                    "additionalProperties": {
                        "$ref": "#/definitions/PbApp.Connection",
                        "additionalProperties": false
                    },
                    "type": "object"
                },
                "activeTabs": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "filesPaths": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "stringCache": {
                    "additionalProperties": {
                        "type": "string"
                    },
                    "type": "object"
                },
                "boolCache": {
                    "additionalProperties": {
                        "type": "boolean"
                    },
                    "type": "object"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "App Config"
        },
        "PbApp.Connection": {
            "required": [
                "ip",
                "port",
                "mode"
            ],
            "properties": {
                "ip": {
                    "type": "string"
                },
                "port": {
                    "type": "string"
                },
                "mode": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "type": "object",
            "title": "Connection"
        }
    }
}